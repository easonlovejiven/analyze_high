<!-- BEGIN VALIDATION STATES-->
<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-cogs font-green-sharp"></i>
      <span class="caption-subject font-green-sharp bold uppercase">表单</span>
    </div>
  </div>
  <div class="portlet-body form">
    <!-- BEGIN FORM-->
    <%= form_for([:admin, @document], :html => {:class => 'form-horizontal clearfix activity-form-validate', :role => 'form' , :enctype => 'multipart/form-data'}) do |f| %>
    <div class="form-body">

      <div class="form-group fileupload">
        <%= f.label(:file, "文件", :class => "col-md-3 control-label") %>
        <div class="col-md-4">
          <div class="fileinput small fileinput-new" data-provides="fileinput">
            <div class="fileinput-new thumbnail">
              <%= @document.file %>
            </div>
            <div class="fileinput-preview fileinput-exists thumbnail"></div>
            <div>
              <span class="btn btn-default btn-file">
                <span class="fileinput-new">选择</span>
                <span class="fileinput-exists">替换</span>
                <%= f.file_field(:file) %>
              </span>
              <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">移除</a>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-3 col-md-9">
                <%= link_to '返回', admin_documents_path, :class => 'btn btn-default' %>
                <% if action_name == 'new' %>
                <button type="submit" class="btn green">保存</button>
                <% else %>
                <button type="submit" class="btn green">更新</button>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
    <!-- END FORM-->
  </div>
</div>
<!-- END VALIDATION STATES-->